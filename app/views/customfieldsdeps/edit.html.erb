<h2><%= link_to l(:l_custdeps_plural), :controller => 'Customfieldsdeps', :action => 'list' %> &#187; <%=l(:l_custdeps_edit)%></h2>

<%= error_messages_for 'cust_deps' %>

<% labelled_tabular_form_for :customfielddep, @custdep, :url =>{:action => 'save'} do |f|  %>
  <div class="box"> 
    <p>
    <%= f.text_field 'name', :required=>true, :label=>l(:l_custdeps_name) -%>
    </p>
    <p>
    <label for="custom_master_id"><%= l(:l_select_master_prompt) %></label>
    <%= @custs_h[@custdep.custom_master_id] -%>
    </p>
    <p>
    <label for="custom_slave_id"><%= l(:l_select_slave_prompt) %></label>
    <%= @custs_h[@custdep.custom_slave_id] -%>
    </p>
  </div>
  <%= submit_tag l(:button_save) -%>

<% end -%>


